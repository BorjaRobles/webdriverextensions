<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.andidev</groupId>
    <artifactId>webdriver-extension-project</artifactId>
    <version>1.0-DEV2</version>
    <packaging>pom</packaging>

    <name>WebDriver Extension Project</name>
    <description>Project pom for the WebDriver Extension framework</description>
    <url>https://github.com/andidev/webdriver-extension</url>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:git@github.com:andidev/webdriver-extension.git</connection>
        <developerConnection>scm:git:git@github.com:andidev/webdriver-extension.git</developerConnection>
        <url>git@github.com:andidev/webdriver-extension.git</url>
    </scm>

    <organization>
        <name>AndiDev</name>
        <url>http://www.andidev.org</url>
    </organization>

    <developers>
        <developer>
            <id>andidev</id>
            <name>Anders Steiner</name>
            <email>anders.steiner@gmail.com</email>
            <organization>AndiDev</organization>
            <organizationUrl>http://www.andidev.org</organizationUrl>
            <roles>
                <role>author</role>
                <role>architect</role>
                <role>developer</role>
            </roles>
        </developer>
    </developers>

    <parent>
        <groupId>org.andidev</groupId>
        <artifactId>webdriver-extension-parent</artifactId>
        <version>1.0-DEV2</version>
        <relativePath>webdriver-extension-parent</relativePath>
    </parent>

    <modules>
        <module>webdriver-extension-parent</module>
        <module>webdriver-extension-core</module>
        <module>webdriver-extension-generator-project</module>
        <module>webdriver-extension</module>
        <module>webdriver-extension-test</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>